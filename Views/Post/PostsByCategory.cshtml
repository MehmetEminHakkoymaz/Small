@model IEnumerable<Small.Models.Post>

<h2>Posts in @ViewBag.CategoryName</h2>

@if (Model.Any())
{
        <ul>
        @foreach (var post in Model)
        {
                    <li>
                        <a href="@Url.Action("Detail", "Post", new { id = post.Id })">@post.Title</a>
                        <small>by @post.User.UserName on @post.CreatedAt.ToLocalTime()</small>
                    </li>
        }
        </ul>
}
else
{
        <p>No posts found in this category.</p>
}
