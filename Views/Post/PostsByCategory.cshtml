@model IEnumerable<Small.Models.Post>

<h2>@ViewBag.CategoryName</h2>

@if (Model.Any())
{
    <ul>
        @foreach (var post in Model)
        {
            <li>
                <h4>@post.Title</h4>
                <p>@post.Content</p>
                <small>Yayınlanma Tarihi: @post.CreatedAt.ToString("dd/MM/yyyy")</small>
            </li>
        }
    </ul>
}
else
{
    <p>Bu kategoriye ait makale bulunamadı.</p>
}
