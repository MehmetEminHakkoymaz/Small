@model Small.ViewModels.EditUserViewModel

<h2>Edit User</h2>

<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="mb-3">
        <label asp-for="FullName" class="form-label">Full Name</label>
        <input asp-for="FullName" class="form-control" readonly />
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>
    <div class="mb-3">
        <label>Roles</label>
        @foreach (var role in Model.Roles)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" asp-for="Roles[@Model.Roles.IndexOf(role)].IsSelected" />
                <label class="form-check-label">@role.RoleName</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
